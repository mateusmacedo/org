{
  "name": "@org/source",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "targets": {
    "local-registry": {
      "executor": "@nx/js:verdaccio",
      "options": {
        "port": 4873,
        "config": ".verdaccio/config.yml",
        "storage": "tmp/local-registry/storage"
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": ".",
        "registryUrl": "https://registry.npmjs.org/",
        "access": "public"
      }
    }
  }
}
